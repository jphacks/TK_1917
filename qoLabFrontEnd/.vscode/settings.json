{
  // デフォルトのコード整形を無効化
  "editor.formatOnSave": false,

  // ESLint 自動フォーマット有効化
  "eslint.autoFixOnSave": true,

  // ESLint の Vue.js 設定
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    }
  ],

  // Prettier の ESLint 連携
  "prettier.eslintIntegration": true
}
